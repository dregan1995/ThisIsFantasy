                <tr>
                    <th>Player Name</th>
                    <th>Team Name</th>
                    <th>Position</th>
                    <th>Total Points</th>
                </tr>
            </thead>
            <tbody>
               
                @foreach (var player in Model.Players)
                {
                    //if (player.Player.TeamId == team.Id && player.Player.Position != null)
                    //{
                    <tr>
                        <td>@player.Name</td>
                        <td>@player.TeamName</td>
                        <td>@player.Position</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
